@{
    ViewData["Title"] = Localizer["OrderCompleted"];
}

@if (TempData["OrderSuccess"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <h4 class="alert-heading">Succès !</h4>
        <p>@TempData["OrderSuccess"]</p>
        <hr>
        <p class="mb-0">Le stock a été mis à jour automatiquement.</p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="text-center" style="margin-top: 50px;">
    <h2>@Localizer["Thanks"]</h2>
    <p>@Localizer["DemoEnding"]</p>
    <br/>
    <a class="btn btn-primary btn-lg" asp-action="Index" asp-controller="Product">
        Retourner aux produits
    </a>
</div>
